@model GymManagementSystem.DTO.MemberDto

<h1>Create Member</h1>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="MemberName" class="control-label"></label> <!-- Updated property -->
        <input asp-for="MemberName" class="form-control" placeholder="Md Eakub Islam" /> <!-- Updated property -->
        <span asp-validation-for="MemberName" class="text-danger"></span> <!-- Updated property -->
    </div>
    <div class="form-group">
        <label asp-for="MemberEmail" class="control-label"></label> <!-- Updated property -->
        <input asp-for="MemberEmail" class="form-control" type="email" id="MemberEmail" placeholder="eakub@example.com" /> <!-- Updated property -->
        <span asp-validation-for="MemberEmail" class="text-danger"></span> <!-- Updated property -->
    </div>
    <div class="form-group">
        <label asp-for="MemberPhoneNumber" class="control-label"></label> <!-- Updated property -->
        <input asp-for="MemberPhoneNumber" class="form-control" placeholder="+1234567890" /> <!-- Updated property -->
        <span asp-validation-for="MemberPhoneNumber" class="text-danger"></span> <!-- Updated property -->
    </div>
    <div class="form-group">
        <label asp-for="MemberSubscriptionType" class="control-label"></label> <!-- Updated property -->
        <select asp-for="MemberSubscriptionType" class="form-control">
            <!-- Updated property -->
            <option value="">Select Subscription Type</option>
            <option value="Basic">Basic</option>
            <option value="Premium">Premium</option>
            <option value="VIP">VIP</option>
        </select>
        <span asp-validation-for="MemberSubscriptionType" class="text-danger"></span> <!-- Updated property -->
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>
