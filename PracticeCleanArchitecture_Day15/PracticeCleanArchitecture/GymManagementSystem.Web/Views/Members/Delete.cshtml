@model GymManagementSystem.DTO.MemberDto

<h1>Delete Member</h1>

<div>
    <h3>Are you sure you want to delete this member?</h3>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.MemberName</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.MemberEmail</dd>

        <dt class="col-sm-2">Phone Number</dt>
        <dd class="col-sm-10">@Model.MemberPhoneNumber</dd>

        <dt class="col-sm-2">Subscription Type</dt>
        <dd class="col-sm-10">@Model.MemberSubscriptionType</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="MemberId" />
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
